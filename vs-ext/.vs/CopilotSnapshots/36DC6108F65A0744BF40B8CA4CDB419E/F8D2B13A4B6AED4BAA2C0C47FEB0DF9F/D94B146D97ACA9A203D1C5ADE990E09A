<Project>
  <PropertyGroup>
    <!-- Suppress NU1603 warnings about package dependency resolution during restore and build -->
    <NoWarn>$(NoWarn);NU1603</NoWarn>
    <RestoreNoWarn>$(RestoreNoWarn);NU1603</RestoreNoWarn>
  </PropertyGroup>
  <ItemGroup>
    <!-- Pin Microsoft.VisualStudio.SDK.Analyzers to the resolved version to avoid resolution mismatches -->
    <PackageVersion Include="Microsoft.VisualStudio.SDK.Analyzers" Version="17.7.22" />
    <!-- Ensure the analyzer package is referenced so NuGet resolves it to the pinned version -->
    <PackageReference Include="Microsoft.VisualStudio.SDK.Analyzers" Version="17.7.22" PrivateAssets="all" />
    <!-- Pin a newer Microsoft.VSSDK.BuildTools version to align dependencies and avoid NU1603 -->
    <PackageVersion Include="Microsoft.VSSDK.BuildTools" Version="17.11.0" />
    <!-- Also add PackageReference to upgrade the build tools package for the project -->
    <PackageReference Include="Microsoft.VSSSDK.BuildTools" Version="17.11.0" PrivateAssets="all" />
  </ItemGroup>
</Project>