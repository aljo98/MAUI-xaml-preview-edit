<UserControl x:Class="MauiXamlPreviewVsix.PreviewToolWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Margin="8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" >
                <TextBlock Text="MAUI XAML Preview (VSIX)" FontWeight="Bold" Margin="0,0,12,0"/>
                <Button Content="Open XAMLâ€¦" Click="OnOpenXamlClick" />
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="1" Margin="8" BorderBrush="#ddd" BorderThickness="1" CornerRadius="4">
            <Grid>
                <wv2:WebView2 x:Name="Web"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
